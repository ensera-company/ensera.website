{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "../node_modules",
    "../../node_modules",
    "../../../node_modules",
    "**/.angular/**",
    "**/dist/**",
    "**/out-tsc/**"
  ]
}
